{
  "name": "gokonnect-backend",
  "version": "1.0.0",
  "description": "GoKonnect Driver-for-hire Booking Platform Backend",
  "main": "dist/app.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/app.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/app.ts",
    "build": "tsc --skipLibCheck --resolveJsonModule --esModuleInterop --outDir dist",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "author": "arkham-night",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.3",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.6.0",
    "razorpay": "^2.9.0",
    "socket.io": "^4.7.2",
    "winston": "^3.9.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^20.11.26",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}